<div {{bind-attr class=":message :panel priority"}}>
	<div class="message-content">{{content}}</div>
	<div class="message-info">Posted {{created_at}} by {{#link-to 'user' user}}{{user.name}}{{/link-to}}</div>
	{{#if tags.length}}
		<ul class="message-tags">
		{{#each tags}}
		<li>{{tag}}</li>
		{{/each}}
      	</ul>
  	{{/if}}
	<ul class="message-actions inline-list">
		<li><a {{action 'report'}}><i class="icon-flag"></i> Report</a></li>
		<li><a href="#"><i class="icon-share"></i> Share</a></li>
	</ul>
</div>