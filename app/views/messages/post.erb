<% content_for :extra_javascript do %>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#tags').tagit({
			});
		});
	</script>
<% end %>

<%= form_for :message, url: {action: "create"} do |f| %>
	<fieldset>
		<legend>Submit a new message</legend>
		<div class="control-group">
	    <%= f.label :content %>
	    <%= f.text_area :content %>
		</div>
		<div class="control-group">
		<%= f.label :hashtags %>
		<ul id="tags">
		</ul>
		</div>
		<div class="control-group">
		<%= f.submit class: "button" %>
		</div>
	</fieldset>
<% end %>