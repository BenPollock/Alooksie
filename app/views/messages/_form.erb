<% end %>

<%= form_for :message, url: {action: "create"} do |f| %>
	<fieldset>
		<legend>Submit a new message</legend>
		<div class="control-group">
	    <%= f.label :content %>
	    <%= f.text_area :content %>
		</div>
		<div class="control-group">
		<%= f.label :hashtags %>
		<%= f.text_field :tags, :"data-provide" => "tag" %>
		</div>
		<div class="control-group">
		<%= f.submit class: "button" %>
		</div>
	</fieldset>
<% end %>