<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
	<title>promo</title>
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width" />
	<meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= yield :head %>
	<!--<link rel="stylesheet" href="css/foundation.css">
	<script src="js/jquery.js"></script>-->
	
</head>
<body>
	<nav class="top-bar">
		<ul class="title-area">
			<!-- Title Area -->
			<li class="name">
				<h1>
					<a href="#">Top Bar Title</a>
				</h1>
			</li>
			<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
		</ul>
		<ul class="right">
			<li>
				<% if session[:user] -%>
				<a class="button"><%= session[:user]['name'] %></a>
				<a class="button alert" href="/logout"><i class="icon-signout"></i> Logout</a>
				<% else -%>
				<a class="button" href="/auth/facebook"><i class="icon-facebook-sign"></i> Login</a> 
				<% end %>
			</li>
		</ul>
	</nav>

	<div id="content" class="row">
		<% if flash[:notice] -%>
		<div class="alert alert-info"><%= flash[:notice] %>  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
		<% end -%>
		<% if flash[:error] -%>
		<div class="alert alert-error"><%= flash[:error] %>  <button type="button" class="close" data-dismiss="alert">&times;</button></div>
		<% end -%>

		<pre><%= session.inspect %></pre>
		<%= yield %>
	</div>
</body>
</html>